# 前言：此檔案為環境變數範例，請複製為 .env 並填寫實際值。

# PostgreSQL 資料庫配置
PG_HOST=localhost
PG_PORT=5432
PG_USER=your_pg_user
PG_PASSWORD=your_pg_password
PG_DATABASE=your_pg_database
PG_POOL_MIN=2
PG_POOL_MAX=10
PG_POOL_ACQUIRE_TIMEOUT=30000
PG_POOL_IDLE_TIMEOUT=10000

# JWT 認證配置
JWT_SECRET=your_super_secret_jwt_key_please_change_this_in_production
JWT_EXPIRES_IN=1h

# 服務埠號 (範例)
PAYMENT_SERVICE_PORT=3001
MERCHANT_SERVICE_PORT=3002
AGENT_SERVICE_PORT=3003
SETTLEMENT_SERVICE_PORT=3004
RISK_CONTROL_SERVICE_PORT=3005
CHANNEL_SERVICE_PORT=3006
